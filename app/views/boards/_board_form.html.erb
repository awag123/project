<%= form_for(@board) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :width %>
	<%= f.text_field :width %>

	<%= f.label :height %>
	<%= f.text_field :height %>
	
	<%= f.label :timezone %>
	<%= f.time_zone_select :timezone,
        ActiveSupport::TimeZone.us_zones,
        default: "Eastern Time (US & Canada)" %>
  <%= f.submit "Create board", class: "btn btn-large btn-primary" %>
<% end %>