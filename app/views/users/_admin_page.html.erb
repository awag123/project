<a href="<%= user_path(user) %>">
  <%= gravatar_for user, size: 52 %>
</a>
<h1>
  <%= user.name %>
</h1>
<span>
  <%= user.email %>
</span>
<section>
<h1>All users</h1>


<ul class="users">
  <%= render @users %>
</ul>

</section>
<% if current_user?(user) %>
	<section>
		<%= link_to "Create board", makeboard_path,
                            class: "btn btn-large btn-primary" %>
	</section>
<% end %> 